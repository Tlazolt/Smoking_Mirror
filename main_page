} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";

/**
 * Smoking Mirror LLC — Single-file portfolio starter
 * Tech: React + Tailwind + shadcn/ui + framer-motion + lucide-react
 *
 * How to use:
 * 1) Replace placeholder text, links, and images below.
 * 2) Add your real project links (GitHub, YouTube, ArcGIS Online, drone maps, etc.).
 * 3) Deploy on Vercel/Netlify/GitHub Pages.
 */

